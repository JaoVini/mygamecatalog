<!DOCTYPE html>
<html>
<head>
  <title>Cadastro de Plataforma</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script>

    function altera(IdPlataforma) {
      $.ajax({
        url: "/plataformas/edit/" + IdPlataforma,
        type: "PUT",
        data: "plataforma=" + $("#plataforma").val(),
        success: function (res) {
          $(location).attr('href', '/plataformas/listar');
        },
      });
    }
    
  </script>

  <style>
    body {
      background-color: #ccc;
    }
    h2 {
      color: rgb(0, 0, 0);
      padding-bottom: 30px;
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
    }
  </style>
</head>
<body>
  <% if (resultado.IdPlataforma) { %>
    <input type="hidden" id="IdPlataforma" name="IdPlataforma" value="<%= resultado.IdPlataforma %>">
    <h1>Alterar Plataformas</h1>
    <form method="#" action="/plataformas/edit/<%= resultado.IdPlataforma %>">
  <% } else { %>
    <h2>Cadastrar Plataforma</h2>
    <div class="container">
      <form method="POST" action="/plataformas/add">
  <% } %>
        <div class="mb-3">
          <label for="plataforma" class="form-label">Nome da Plataforma:</label>
          <% if (resultado.IdPlataforma) { %>
            <input type="text" class="form-control" id="plataforma" name="plataforma" value="<%= resultado.NoPlataforma %>">
          <% } else { %>
            <input type="text" class="form-control" id="plataforma" name="plataforma" required>
          <% } %>
        </div>
        <% if (resultado.IdPlataforma) { %>
          <button type="button" onclick="altera(<%= resultado.IdPlataforma %>);" class="btn btn-primary">Salvar</button>
        <% } else { %>
          <button type="submit" class="btn btn-primary">Cadastrar</button>
        <% } %>
      </div>
      </form>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
