<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Categorias</title>
    <a href="/plataformas/add" class="btn btn-success">Incluir</a>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>

      .btn{
        color: rgb(248, 233, 217);;
        background-color: black;
       
      
      }
      body{
        background-color: #ccc;
      }

    </style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function exclui(IdPlataforma){
        Swal.fire({
  title: "Excluir Plataforma",
  text: "Você realmente deseja excluir essa plataforma?",
  icon: "warning",
  showCancelButton: true,
  confirmButtonColor: "#3085d6",
  cancelButtonColor: "#d33",
  confirmButtonText: "Sim, desejo!"
}).then((result) => {
  if (result.isConfirmed) {
    $.ajax({
            url: "/plataformas/delete/" + IdPlataforma,
            type: "DELETE",
            success: function (res) {
             $(location).attr('href', '/plataformas/listar');
            },
          });
            }
          })
      }

    </script>
  </head>
  <body>

    <table class="table">
      <thead class="table-light">
        <tr>
          <th>#</th>
          <th>Plataformas</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody class="tbody">
        <% for (item of resultado)  { %>
          <tr>
            <td><%= item.IdPlataforma%> </td>
            <td><%= item.NoPlataforma%> </td>
            <td>
              <a href="/plataformas/edit/<%= item.IdPlataforma %>" class="btn btn-primary">Editar</a>
              <button type="button" class="btn btn-danger" onclick="exclui(<%= item.IdPlataforma %>)">Excluir</button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

  </body>
</html>
