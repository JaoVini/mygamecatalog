<!DOCTYPE html>
<html>
<head>
  <title>Cadastro de Categoria</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script>

    function altera(IdCategoria) {
      $.ajax({
        url: "/categorias/edit/" + IdCategoria,
        type: "PUT",
        data: "categoria=" + $("#categoria").val(),
        success: function (res) {
          $(location).attr('href', '/categorias/listar');
        },
      });
    }
    
  </script>

  <style>
    body {
      background-color: #ccc;
    }
    h2 {
      color: rgb(0, 0, 0);
      padding-bottom: 30px;
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
    }
  </style>

  <script></script>
</head>
<body>

  <% if (resultado.IdCategoria) {%>
    <input type="hidden" id="IdCategoria" name="IdCategoria" value="<%= resultado.IdCategoria%>">
    <h1>Alterar Categorias</h1>
    <form method="#" action="/categorias/edit/<%= resultado.IdCategoria%>">
    <%} else {%>
  <h2>Cadastrar Categoria</h2>
  <div class="container">
    <form method="post" action="/categorias/add">
      <%}%>
      <div class="mb-3">
        <label for="categoria" class="form-label">Nome da Categoria:</label>
        <% if (resultado.IdCategoria) {%>
          <input type="text" class="form-control" id="categoria" name="categoria" value="<%= resultado.Categoria%>">
        <%} else {%>
          <input type="text" class="form-control" id="categoria" name="categoria" required>
          <%}%>
      </div>
      <% if (resultado.IdCategoria) { %>
        <button type="button" onclick="altera(<%= resultado.IdCategoria %>);" class="btn btn-primary">Salvar</button>
        <% } else { %>
      <button type="submit" class="btn btn-primary">Cadastrar</button>
      <% } %>
    </div>
    </form>
  
  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
